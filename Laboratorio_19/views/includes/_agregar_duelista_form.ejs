<form action="/duelistas/agregar" method="POST" enctype="multipart/form-data">
  <!-- Campo oculto necesario para CSRF -->
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">

  <label for="nombre" class="label">Nombre del duelista</label>
  <input
    class="input is-primary"
    type="text"
    id="nombre"
    name="nombre"
    placeholder="Duelista bagabundo"
    required
  />
  <br><br>

  <label for="imagen" class="label">Imagen</label>
  <input 
    type="file" 
    id="imagen" 
    name="imagen"  
    accept=".png, .jpg, .jpeg, .gif"
    class="input is-primary"
  >
  <br><br>

  <input type="submit" class="button is-primary" value="Guardar duelista">
</form>
