<div class="columns">
  <div class="column">
    <form action="<% if (isNew) { %>/jugador/signup<% } else { %>/jugador/login<% } %>" method="POST">
      <!-- Campo CSRF -->
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">


      <label for="username" class="label">Jugador</label>
      <input
        class="input is-primary"
        type="text"
        placeholder="(*￣3￣)╭"
        id="username"
        name="username"  
        required
      />
      <br><br>

      <label for="password" class="label">Password</label>
      <input
        class="input is-primary"
        type="password"
        placeholder="(●__●)"
        id="password"
        name="password" 
        required
      />
      <br><br>

      <input type="submit" id="boton_login" class="button is-primary" value="Entrar">
    </form>
  </div>
</div>
